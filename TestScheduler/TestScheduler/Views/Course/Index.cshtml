@model IEnumerable<TestScheduler.Models.Course>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Courses</h1>

<table class="table">
    <tbody>
        @foreach (var enrolled in ViewBag.enrolledList)
        {
            @foreach (var item in Model)
            {
                bool foundMatch = true;
                //Check first 4 char of strings
                for (int i = 0; i < 4; i++)
                {
                    if (item.Module_Description[i] != enrolled[i])
                    {
                        foundMatch = false;
                        break;
                    }
                }

                @if (foundMatch)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Module_Description)
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.ID">Details</a>
                        </td>
                    </tr>

                    break;
                }
            }
        }
    </tbody>
</table>
